<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<div id="tasks">
  <h3>Tasks</h3>
  <ul>
    <% @project.tasks.each do |t| %>
      <%= t.description %>
      <%= t.done %>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
